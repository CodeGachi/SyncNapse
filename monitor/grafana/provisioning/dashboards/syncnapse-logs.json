{
  "title": "SyncNapse Logs",
  "timezone": "browser",
  "editable": true,
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "label": "Datasource",
        "query": "loki",
        "current": { "text": "Loki", "value": "Loki", "selected": true },
        "refresh": 1
      },
      {
        "name": "service",
        "type": "query",
        "label": "service",
        "hide": 0,
        "datasource": { "type": "loki", "uid": "$datasource" },
        "query": "label_values({service=~\".+\"}, service)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "type": "logs",
      "title": "백엔드",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true, "prettifyLogMessage": true, "sortOrder": "Ascending" },
      "datasource": { "type": "loki", "uid": "$datasource" },
      "targets": [
        { "refId": "A", "expr": "{service=\"backend\"}", "queryType": "logs", "editorMode": "code" }
      ]
    },
    {
      "type": "logs",
      "title": "프론트엔드",
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 10 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true, "prettifyLogMessage": true, "sortOrder": "Ascending" },
      "datasource": { "type": "loki", "uid": "$datasource" },
      "targets": [
        { "refId": "A", "expr": "{service=\"frontend\"}", "queryType": "logs", "editorMode": "code" }
      ]
    },
    {
      "type": "logs",
      "title": "nginx",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 10 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true, "prettifyLogMessage": true, "sortOrder": "Ascending" },
      "datasource": { "type": "loki", "uid": "$datasource" },
      "targets": [
        { "refId": "A", "expr": "{service=\"nginx\"}", "queryType": "logs", "editorMode": "code" }
      ]
    }
  ]
}
