# 로컬 개발 환경 설정
# .env.local 파일을 생성하여 사용하세요

# IndexedDB 사용 여부 (개발 모드)
# true: IndexedDB 사용 (백엔드 없이 로컬에서 작동)
# false: 백엔드 API 사용 (프로덕션 모드)
NEXT_PUBLIC_USE_LOCAL_DB=true

# Mock 인증 사용 여부
NEXT_PUBLIC_USE_MOCK_AUTH=true

# 백엔드 API URL (프로덕션 모드일 때 사용)
NEXT_PUBLIC_API_URL=http://localhost:8000
